#! /bin/bash -e
progname=$(basename $0)

if [ "$USER" = "" ]
then
    USER=$(whoami)
fi

CURDATE=$(date +"%F")
DAYOFWEEK=$(date +"%u")
DATABASE="x20"

if [ "$DAYOFWEEK" -gt 5 ] || [ "$DAYOFWEEK" -eq 1 ]
then
    LASTBIZDAY="last friday"
else
    LASTBIZDAY="yesterday"
fi



function execute
{
    echo -n "** Running:     "
    echo "$1"
    eval "$1"
    echo
}


createNewRepo(){

dir=./$1/
mkdir -p $dir;

for q in `perl -MAI::MicroStructure -E  'my %s=AI::MicroStructure->find_structures(@INC); '`; do
cp $q $dir;
echo $q; done
cd $dir;
git init
git add .
git commit -m "My initial commit message"


}


createNewRepo $1
exit


