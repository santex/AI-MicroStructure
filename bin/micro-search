      'category'     =>"on ymy  computer",
      'content'     =>"on a distant computer",
     };

my  $cmd={"h" =>                { alias => "help", exclude_from_completion => 0 },
                "?" =>          { alias => "help", exclude_from_completion =>1 },
    "quit" =>           { alias => "exit", exclude_from_completion =>0 },
                "help" => {
                        desc =>sub{ print usage();},
