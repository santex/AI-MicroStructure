sub getCommands {

my @c = keys $descriptions->{action};

foreach my $ele (@c){

                                my $s ={};
                                $cmd->{$ele}->{cmds} = $s;

                                foreach (keys %{$descriptions->{location}}){

                                  $s->{$_}->{cmds} = {};


                                }


}

        return $cmd;
}




