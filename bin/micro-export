__DATA__
foreach my $x ( "s".."z"){

  $graph = GraphViz::Small->new(directed => 0, layout => 'twopi');
  walker($x,grep{/^$x/}@t);
  $graph->as_png(sprintf("%s_directories.png",$x));
  usleep(1000);

}









































